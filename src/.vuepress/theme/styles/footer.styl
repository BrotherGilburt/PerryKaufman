@import 'palette'

/* block colors */
footer-background-color = gray-color
footer-border-color = gray-color-dark
icon-size = 4.8rem
icon-padding = .4rem

/* footer */
.footer
  align-items center
  background footer-background-color
  display flex
  flex-flow column nowrap
  padding 1.6rem
  width 100%

.footer-text
  font-size 1.6rem
  margin 0 0 .8rem 0
  text-align center

.footer-icons
  display flex
  flex-flow row nowrap
  list-style none
  margin 0
  padding 0

.footer-icon
  height icon-size
  margin-right .5rem
  width: icon-size
  &:last-of-type
    margin-right 0

.footer-icon-link
  display block
  height 100%
  padding icon-padding
  transition .2s all ease-in-out
  width 100%
  &:hover
    transform: translateY(-.2rem)

.footer-icon-image
  height 100%
  width 100%

@media all and (min-width 50em)
  .footer
    align-items center
    flex-direction row
    justify-content center

  .footer-text
    margin 0 1.6rem 0 0