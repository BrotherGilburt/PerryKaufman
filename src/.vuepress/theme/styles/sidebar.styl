@import 'palette'

/* block colors */
sidebar-background-color = primary-color-lightest
sidebar-shadow-color = gray-color
sidebar-border-color = primary-color-dark

/* font colors */
sidebar-heading-color = primary-color-darkest
sidebar-symbol-color = primary-color-darker
sidebar-hover-color = primary-color-dark

sidebar-shadow(shadow)
  if shadow
    box-shadow .5rem 0 .5rem sidebar-shadow-color
  else
    box-shadow .5rem 0 .5rem transparent

/* sidebar */
.sidebar
  background sidebar-background-color
  display flex
  flex-flow column nowrap
  font-size 3.2rem
  height 'calc(100% - %s)' % header-height
  left -1 * sidebar-width
  line-height 1.3
  overflow-y auto
  position fixed
  top header-height
  transition all .25s ease-in-out
  width sidebar-width
  z-index 2

.sidebar-mask
  background-color sidebar-shadow-color
  height 100% - header-height
  left 0
  position fixed
  top header-height
  width 100%
  z-index 1

.sidebar-open .sidebar
  left 0
  sidebar-shadow true

/* sidebar nav */
.sidebar-header
  color sidebar-heading-color
  font-size 4rem
  margin 0

.sidebar-group-header
  color sidebar-heading-color
  font-size 3.2rem
  margin 0

.sidebar-list
  color sidebar-symbol-color
  font-size 2.8rem
  list-style none
  margin 0
  padding-left .5rem

.sidebar-list-wrapper
  border-right .3rem solid sidebar-border-color
  flex 1
  padding 1rem

.sidebar-link
  color sidebar-symbol-color
  text-decoration none
  &:hover
    color sidebar-hover-color

.sidebar-sub-list
  list-style none
  padding-left 2rem

.current > .sidebar-link
    text-decoration underline

/* media */
@media all and (min-width 25rem)
  .sidebar
    left -1 * sidebar-static-width
    width sidebar-static-width

@media all and (min-width 75rem)
  .sidebar
    left 0
    sidebar-shadow true

  .no-sidebar .sidebar
    left -1 * sidebar-static-width
    sidebar-shadow false