@import 'palette'

/* block colors */
sidebar-background-color = primary-color-lightest
sidebar-shadow-color = gray-color

/* font colors */
sidebar-heading-color = primary-color-darkest
sidebar-symbol-color = primary-color-darker
sidebar-hover-color = primary-color-dark

sidebar-shadow(shadow)
  if shadow
    box-shadow 5px 0 5px sidebar-shadow-color
  else
    box-shadow 5px 0 5px transparent

/* sidebar */
.sidebar
  background sidebar-background-color
  font-size 1.3rem
  height 'calc(100% - %s)' % header-height
  left -1 * sidebar-width
  line-height 1.3
  overflow-y auto
  position fixed
  top header-height
  transition all .25s ease-in-out
  width sidebar-width
  z-index 2

.sidebar-mask
  background-color sidebar-shadow-color
  height 100% - header-height
  left 0
  position fixed
  top header-height
  width 100%
  z-index 1

.sidebar-open .sidebar
  left 0
  sidebar-shadow true

/* sidebar nav */
.sidebar-header
  color sidebar-heading-color
  font-size 1.2em
  margin 0

.sidebar-group-header
  color sidebar-heading-color
  font-size 1em
  margin 0

.sidebar-list
  color sidebar-symbol-color
  list-style none
  margin 0
  padding-left 5px

.sidebar-list-wrapper
  padding 10px

.sidebar-link
  color sidebar-symbol-color
  text-decoration none
  &:hover
    color sidebar-hover-color

.sidebar-sub-list
  list-style none
  padding-left 20px

.current > .sidebar-link
    text-decoration underline

/* media */
@media all and (min-width 400px)
  .sidebar
    left -1 * sidebar-static-width
    width sidebar-static-width

@media all and (min-width 1200px)
  .sidebar
    left 0
    sidebar-shadow true

  .no-sidebar .sidebar
    left -1 * sidebar-static-width
    sidebar-shadow false